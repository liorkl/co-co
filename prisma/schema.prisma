generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enable pgvector via migration. Prisma supports Vector via @db.Vector(length).

enum Role {
  CEO
  CTO
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      Role
  onboarded Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile           Profile?
  startup           Startup?
  techBackground    TechBackground?
  interviewResponse InterviewResponse[]
  profileSummary    ProfileSummary?
  embeddings        Embedding[]
  ceoMatches        Match[]    @relation("CeoMatches")
  ctoMatches        Match[]    @relation("CtoMatches")
}

model Profile {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @unique
  name        String
  location    String?
  timezone    String?
  availability String?
  commitment  String?
  seniority   String?
}

model Startup {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
  stage        String?
  domain       String?
  description  String?
  funding      String?
  equity_offer String?
  salary_offer String?
}

model TechBackground {
  id               String   @id @default(cuid())
  user             User     @relation(fields: [userId], references: [id])
  userId           String   @unique
  primary_stack    String?
  years_experience Int?
  domains          String?
  track_record     String?
  founding_interest String?
}

model InterviewResponse {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      Role
  structured Json
  freeText  String?
  createdAt DateTime @default(now())
}

model ProfileSummary {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @unique
  ai_summary_text String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Embedding {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      Role
  source    String   // 'summary' | 'full'
  vector    Bytes    // Placeholder: if using Prisma @db.Vector, change to: Decimal[] @db.Vector(1536)
  createdAt DateTime @default(now())
  @@index([userId])
}

model Match {
  id         String   @id @default(cuid())
  ceoUser    User     @relation("CeoMatches", fields: [ceoUserId], references: [id])
  ceoUserId  String
  ctoUser    User     @relation("CtoMatches", fields: [ctoUserId], references: [id])
  ctoUserId  String
  score      Float
  reasons    Json
  createdAt  DateTime @default(now())

  @@index([ceoUserId])
  @@index([ctoUserId])
}


