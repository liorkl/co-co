generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enable pgvector via migration. Prisma supports Vector via @db.Vector(length).

enum Role {
  CEO
  CTO
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(CEO)
  onboarded     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts            Account[]
  sessions            Session[]
  profile             Profile?
  startup             Startup?
  techBackground      TechBackground?
  interviewResponse   InterviewResponse[]
  profileSummary      ProfileSummary?
  embeddings          Embedding[]
  ceoMatches          Match[]    @relation("CeoMatches")
  ctoMatches          Match[]    @relation("CtoMatches")
  introRequests       IntroRequest[] @relation("IntroRequests")
  introTargets        IntroRequest[] @relation("IntroTargets")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @unique
  name        String
  location    String?
  timezone    String?
  availability String?
  commitment  String?
  seniority   String?
}

model Startup {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
  stage        String?
  domain       String?
  description  String?
  funding      String?
  equity_offer String?
  salary_offer String?
}

model TechBackground {
  id               String   @id @default(cuid())
  user             User     @relation(fields: [userId], references: [id])
  userId           String   @unique
  primary_stack    String?
  years_experience Int?
  domains          String?
  track_record     String?
  founding_interest String?
}

model InterviewResponse {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      Role
  structured Json
  freeText  String?
  createdAt DateTime @default(now())
}

model ProfileSummary {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @unique
  ai_summary_text String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Embedding {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      Role
  source    String   // 'summary' | 'full'
  vector    Bytes    // Placeholder: if using Prisma @db.Vector, change to: Decimal[] @db.Vector(1536)
  createdAt DateTime @default(now())
  @@index([userId])
}

model Match {
  id         String   @id @default(cuid())
  ceoUser    User     @relation("CeoMatches", fields: [ceoUserId], references: [id])
  ceoUserId  String
  ctoUser    User     @relation("CtoMatches", fields: [ctoUserId], references: [id])
  ctoUserId  String
  score      Float
  reasons    Json
  createdAt  DateTime @default(now())

  @@index([ceoUserId])
  @@index([ctoUserId])
}

enum IntroRequestStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

model IntroRequest {
  id            String            @id @default(cuid())
  requester     User              @relation("IntroRequests", fields: [requesterId], references: [id])
  requesterId   String
  target        User              @relation("IntroTargets", fields: [targetId], references: [id])
  targetId      String
  status        IntroRequestStatus @default(PENDING)
  feedback      String?           // Optional feedback from requester
  rating        Int?              // Optional rating (1-5 or thumbs up/down: 1 or 2)
  adminNotes    String?           // Admin moderation notes
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  reviewedAt    DateTime?         // When admin reviewed
  reviewedBy    String?           // Admin user ID who reviewed

  @@index([requesterId])
  @@index([targetId])
  @@index([status])
  @@unique([requesterId, targetId]) // Prevent duplicate requests
}


